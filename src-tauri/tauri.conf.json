{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pyright-with-tauri",
  "version": "0.1.0",
  "identifier": "com.pyright-with-tauri.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "pyright-with-tauri",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "pyright_local"
    ],
    "externalBin": [
      "binaries/pyright-server"
    ]
  }
}
